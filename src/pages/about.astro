      }
      .member-img {
        width: 100%;
        margin-bottom: 1.5rem;
        border-radius: 40px;
        box-shadow: 5px 20px 15px hsla(0, 0%, 0%, 0.1);
      }
      .showcase {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100vw;
        /* padding: 2rem 20% 2rem; */
        background-color: var(--aces-blue-dark);
        overflow-y: hidden;
      }
      .showcase > img {
        width: 100%;
      }
      .blurb {
        background-color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        /* padding-bottom: 2rem; */
      }
      .blurb > p {
        /* width: 80%; */
        padding: 0 20%;
        font-size: 1.8rem;
      }
      .heading {
        font-size: 1.5rem;
        padding: 2rem 0 2rem;
      }
      .big-heading {
        font-size: 2.5rem;
        padding: 3rem 0 3rem;
      }
      .awards-container {
        padding: 0 20% 2rem;
        background-color: var(--aces-blue);
      }
      .awards-container > p {
        font-size: 1.4rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        background-color: #fff;
        box-shadow: 5px 10px 10px hsla(0, 0%, 0%, 0.1);
      }

      @media (max-width: 35em) {
        .team-header {
          padding: 0;
          text-align: center;
          font-size: 3rem;
        }
        .team-cards-container {
          margin: 0 1.25rem;
