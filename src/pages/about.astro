        margin: 0 5% 2rem;
      }
      .new-tab-linebreak {
        display: inline;
      }
      .team-header {
        padding: 0;
        text-align: center;
        font-size: 3rem;
      }
      .members-container {
        margin: 0;
      }
      .team-cards-container {
        flex-wrap: nowrap;
        align-items: center;
        flex-direction: column;
      }
      .awards-container {
        padding: 0 5% 2rem;
      }
