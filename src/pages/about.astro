      text-align: left;
      margin-right: 5rem;
      /* padding: 1.5rem; */
      /* background-color: #fff; */
      color: #000;
    }
    .photo-card-container {
      flex: 0 0 50%;
      margin-right: 2rem;
      overflow: hidden;
      box-shadow: 5px 20px 15px hsla(0, 0%, 0%, 0.1);
      /* background-position: center;
      background-size: cover; */
    }
    .photo-card-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      /* object-position: 50% 65%; */
    }
    .photo-card-text {
      background-color: #fff;
      height: 100%;
      padding: 1.5rem;
      margin-right: 2rem;
      flex: 1 0 20%;
      text-align: center;
    }
    .photo-text-container > *,
    .photo-grid-container > * {
      border-radius: 40px;
    }
    .photo-grid-container {
      display: flex;
      justify-content: space-around;
      margin: 0 5% 2rem;
    }
    .photo-grid-container > .photo-card-container {
      flex: 0 1 50%;
      margin: 0;
    }
    .motivated-text {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      padding: 4rem 4rem;
      /* margin: 0 5% 3rem; */
      /* background-color: #fff; */
      border-radius: 40px;
    }
    .info-container {
      margin: 0 5% 5rem;
    }
    .info-button-container {
      margin-top: 1rem;
      /* display: flex; */
      padding: 0.8rem;
      /* position: fixed; */
      border-radius: 40px;
      /* margin-bottom: 10%; */
    }
    .info-button-container > span {
      padding-right: 0.5rem;
    }
    .info-button {
      border: none;
      padding: 0;
      background: transparent;
    }
    .info-button:hover {
      rotate: 360deg;
      transform: scale(1.2);
      transition: 0.3s all ease-out;
    }
    .info-icon {
      fill: var(--aces-blue);
    }
    .info-icon:active {
      fill: var(--aces-blue-dark);
    }
    .new-tab-linebreak {
      display: none;
    }
    .download-button {
      border: none;
      padding: 0;
      background: transparent;
    }
    .download-button:hover {
      transform: scale(1.2);
      transition: 0.2s all ease-out;
    }
    .team-container {
      margin: 4rem 5% 3rem;
    }
    .members-container {
      margin: 0 5%;
    }
    .team-cards-container {
      display: flex;
      justify-content: space-evenly;
      margin: 1rem 1rem;
    }
    .member-flex-container {
      display: flex;
      gap: 1rem;
      overflow: hidden;
      /* align-items: center; */
    }
    .member-card {
