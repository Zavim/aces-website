    .blurb > p {
      /* width: 80%; */
      padding: 0 20%;
      font-size: 1.8rem;
    }
    .heading {
      font-size: 1.5rem;
      padding: 2rem 0 2rem;
    }
    .big-heading {
      font-size: 2.5rem;
      padding: 3rem 0 3rem;
    }
    .awards-container {
      padding: 0 20% 2rem;
      background-color: var(--aces-blue);
    }
    .awards-container > p {
      font-size: 1.4rem;
      padding: 1.5rem;
      margin-bottom: 2rem;
      background-color: #fff;
      box-shadow: 5px 10px 10px hsla(0, 0%, 0%, 0.1);
    }

    @media (max-width: 35em) {
      .blurb > p {
        padding: 2rem 5%;
      }
      .awards-container {
        padding: 0 5% 2rem;
      }
    }
