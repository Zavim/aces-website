---
import { Content as PhotoText } from "../components/about.mdx";
import { Image } from "astro:assets";

import paddleBoarding from "../images/paddleBoarding.jpg";
---

<html>
  <div class="photo-text-container">
    <div class="text-card">
      <PhotoText />
    </div>
    <div class="photo-card-container">
      <Image
        src={paddleBoarding}
        alt="students paddleboarding on a lake as the sun sets"
        class="photo-card-img"
      />
    </div>
  </div>

  <style>
    main {
      overflow-x: hidden;
    }
    .flex {
      display: flex;
      gap: var(--gap, 1rem);
    }
    body {
      overflow-x: hidden;
      /* background-color: var(--aces-blue); */
      background-color: #eee;
      font-family: "Manrope", sans-serif;
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-weight: 700;
    }
    .text-center {
      text-align: center !important;
    }
    .outline {
      border: 2px solid var(--aces-blue-light);
      /* border-color: var(--aces-blue); */
    }
    .blue-fill {
      background-color: var(--aces-blue);
      color: #fff;
    }
    /* .container {
      position: relative;
      width: 100%;
      flex: 0 1 20%;
      width: 333px;
      min-height: 300px;
    } */
    .mission-text {
      text-align: center;
      padding: 2rem 0;
      margin: 2rem 5%;
      /* background-color: #fff; */
      border-radius: 40px;

      /* width: 90%; */
    }
    /* .mission-card {
      flex: 0 0 25%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 1rem;
      background-color: var(--aces-blue);
      color: #fff;
    } */
    .blurb {
      font-size: 1.25rem;
    }
    .heading {
      font-size: 1.5rem;
      padding: 2rem 0 2rem;
    }
    .big-heading {
      font-size: 2.5rem;
      padding: 3rem 0 3rem;
    }
    .part-transparent {
      opacity: 0.6;
    }
    .photo-text-container {
      display: flex;
      margin: 5rem 5% 5rem;
      justify-content: space-between;
      border-radius: 40px;
      /* background-color: var(--aces-blue); */
      height: 525px;
    }
    .photo-text-container > * {
      border-radius: 40px;
    }
    .signup-photo-text-container > * {
      border-radius: 40px;
    }
    .text-card {
      display: flex;
      flex: 1 0 45%;
      flex-direction: column;
      /* align-items: center; */
      justify-content: center;
      text-align: left;
      margin-right: 5rem;
      /* padding: 1.5rem; */
      /* background-color: #fff; */
      color: #000;
    }
    .text-card > h2 {
      padding-bottom: 1.5rem;
    }
    .text-card > p {
      font-size: 1.25rem;
      /* font-weight: 500; */
    }
    .photo-card-container {
      /* flex: 0 0 49%; */
      overflow: hidden;
      box-shadow: 5px 20px 15px hsla(0, 0%, 0%, 0.1);
      /* background-position: center;
      background-size: cover; */
    }
    .photo-card-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      /* opacity: 0.7; */
      /* z-index: -1; */
      /* object-position: 50% 65%; */
    }
    .photo-card-text {
      background-color: #fff;
      height: 100%;
      padding: 1.5rem;
      margin-right: 2rem;
      flex: 1 0 20%;
      text-align: center;
    }
    h5 {
      color: var(--aces-blue-dark);
    }
    .rewards-list {
      font-size: 1.25rem;
      padding-top: 1rem;
      list-style-type: "â˜…";
      margin-bottom: 1rem;
    }
    li {
      padding: 0.5rem 0 0 1rem;
    }
    li::marker {
      /* color: var(--aces-blue); */
      color: var(--aces-blue-dark);
    }
    li::marker:hover {
      rotate: 60deg;
    }
    .rewards-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      /* margin: 0 5%; */
      /* background-color: #ccc; */
      /* background-color: var(--aces-blue); */
    }
    .rewards-card {
      cursor: pointer;
      position: relative;
      display: flex;
      /* flex: 0 1 20%; */
      flex: 0 1 35%;
      flex-direction: column;
      width: 333px;
      /* min-height: 300px; */
      min-height: 460px;
      align-items: center;
      justify-content: space-around;
      text-align: center;
      font-size: 1.2rem;
      font-weight: 500;
      border-radius: 10px;
      padding: 1.5rem;
      margin: 0 1rem 2rem;
      overflow: hidden;
      background-color: #fff;
      box-shadow: 5px 10px 15px hsla(0, 0%, 0%, 0.1);
    }
    .rewards-card-text {
      /* font-size: 1.25rem; */
    }
    .rewards-card.icon-side {
      padding: 0;
      background-image: linear-gradient(
        var(--aces-blue),
        var(--aces-blue-dark)
      );
    }
    .rewards-card > .photo-card-img {
      opacity: 0.5;
    }
    .rewards-icon {
      position: absolute;
      top: 45%;
      bottom: 50%;
      transform: scale(2);
      /* -ms-transform: translate(-50%, -50%); */
      /* padding-top: 2rem; */
    }
    .spinning-star {
      fill: var(--aces-blue);
      position: absolute;
      left: 2.5%;
      bottom: -160%;
      scale: 20;
      z-index: -1;
      opacity: 70%;
      rotate: -60deg;
    }
    .spinning-star-right-up {
      fill: var(--aces-blue);
      position: absolute;
      right: 8%;
      bottom: -120%;
      scale: 10;
      z-index: -1;
      opacity: 70%;
    }
    .spinning-star-right {
      fill: var(--aces-blue-dark);
      position: absolute;
      right: 0%;
      bottom: -100%;
      scale: 20;
      z-index: -1;
      opacity: 70%;
      rotate: 40deg;
    }
    .motivated-text {
      display: flex;
      flex: 0.75 0 25%;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: center;
      /* text-align: center; */
      padding: 2rem 2rem;
      /* margin: 0 5% 3rem; */
      /* background-color: #fff; */
      border-radius: 40px;
    }
    .motivated-header {
      padding: 0 1rem;
      text-align: center;
    }
    .signup-photo-text-container {
      display: flex;
      margin: 3rem 7.5% 5rem;
      justify-content: space-around;
      /* background-color: var(--aces-blue); */
      height: fit-content;
    }
    .signup-photo-card-container {
      flex: 0.25 0 25%;
      overflow: hidden;
      box-shadow: 5px 20px 15px hsla(0, 0%, 0%, 0.1);
      margin-right: 1rem;
      /* background-position: center;
      background-size: cover; */
    }
    .signup {
      /* position: relative;
      right: -100%; */
      border: none;
      border-radius: 40px;
      color: #fff;
      /* background-color: var(--aces-blue); */
      background-color: var(--aces-blue-dark);
      padding: 1rem 2rem;
      margin: 0;
      box-shadow: 5px 10px 15px hsla(0, 0%, 0%, 0.1);
    }
    .signup:hover {
      background-color: var(--aces-blue-very-dark);
      transform: translateY(5px);
      box-shadow: none;
      transition: 0.1s transform ease-out;
    }

    @media (max-width: 240em) {
      .spinning-star-right {
        bottom: -220%;
      }
    }

    @media (max-width: 64em) {
      .mission-text {
        /* font-size: 1.2rem; */
        /* margin: 0; */
        padding: 1.5rem;
      }
      .photo-text-container {
        flex-direction: column;
        justify-content: space-between;
        /* height: fit-content; */
        height: 48rem;
        margin-bottom: 4rem;
      }
      .text-card {
        /* display: block; */
        flex: 0 0 10%;
        margin: 0;
      }
      .photo-card-container {
        margin-top: 3rem;
        flex: 0 0 40%;
      }
      .rewards-container {
        flex-wrap: wrap;
        padding: 0 0 2rem;
      }
      .rewards-card {
        flex: 0 0 40%;
        margin-bottom: 2rem;
      }
      .spinning-star-right-up {
        scale: 10;
        bottom: -50%;
      }
      .spinning-star {
        scale: 15;
        bottom: -100%;
      }
      .spinning-star-right {
        scale: 15;
        bottom: -170%;
      }
      .signup-photo-text-container {
        margin: 0 5% 3rem;
        flex-direction: column;
        height: 55rem;
      }
      .signup-photo-card-container {
        margin: 0 0 2rem;
        flex: 0 0 40%;
      }
      .rewards-list {
        padding-bottom: 1rem;
      }
    }

    @media (max-width: 35em) {
      .mission-container {
        padding: 1rem 1.2rem;
        flex-direction: column;
        height: auto;
      }
      .mission-text {
        font-size: 1.2rem;
        padding: 1.5rem;
      }
      .blurb {
      }
      .photo-text-container {
        flex-direction: column;
        height: auto;
        margin: 3rem 5% 3rem;
      }
      .text-card {
        padding: 0 1rem 3rem;
        text-align: center;
        margin: 0;
      }
      .text-card > p {
        font-size: 1.2rem;
      }
      .photo-card-container {
        margin: 0;
      }
      .rewards-container {
        padding: 0;
        flex-direction: column;
        flex-wrap: nowrap;
        margin: 2rem 5%;
        align-items: center;
        /* height: 160vh; */
        height: 81.25rem;
        /* justify-content: space-between; */
      }
      .rewards-card {
        flex: 0 1;
        min-height: 300px;

        /* margin: 0.5rem 1.2rem; */
        /* margin: 1rem 0; */
      }
      .rewards-card-text {
        font-size: 1rem;
      }
      .rewards-icon {
        padding: 0;
      }
      .spinning-star {
        scale: 10;
        bottom: -200%;
      }
      .spinning-star-right-up {
        scale: 10;
        bottom: -150%;
      }
      .spinning-star-right {
        scale: 10;
        bottom: -300%;
      }
      .signup-photo-text-container {
        flex-direction: column;
        height: auto;
      }
      .signup-photo-card-container {
        margin: 0 0 3rem;
      }
      .motivated-text {
        padding: 1.5rem;
        font-size: 1.2rem;
      }
      .motivated-header {
        text-align: center;
      }
      .rewards-list {
        font-size: 1.2rem;
      }
    }
  </style>


</html>
