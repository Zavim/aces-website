---
import { Image } from "astro:assets";
import { Content as Motivated } from "../components/motivated.md";
import mouseAndCat from "../images/mouseAndCat1200.jpg";
---

<html>
  <div class="signup-photo-text-container">
    <div class="signup-photo-card-container">
      <Image
        class="photo-card-img"
        src={mouseAndCat}
        alt="children in front of two people costumed, one as a cat and the other, a mouse"
      />
    </div>
    <div class="motivated-text blurb blue-fill">
      <Motivated />
      <a class="signup" href="/ACESPacket.pdf" target="_blank">Sign Up!</a>
    </div>
  </div>

  <style is:global>
    .blue-fill {
      background-color: var(--aces-blue);
      color: #fff;
    }
    .motivated-text {
      display: flex;
      flex: 0.75 0 25%;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: center;
      padding: 2rem 2rem;
      border-radius: 40px;
    }
    .motivated-text > h2 {
      padding: 0 1rem;
      text-align: center;
    }
    .blurb {
      font-size: 1.25rem;
    }
    .signup-photo-text-container {
      display: flex;
      margin: 3rem 7.5% 5rem;
      justify-content: space-around;
      height: fit-content;
    }
    .signup-photo-text-container > * {
      border-radius: 40px;
    }
    .signup-photo-card-container {
      flex: 0.25 0 25%;
      overflow: hidden;
      box-shadow: 5px 20px 15px hsla(0, 0%, 0%, 0.1);
      margin-right: 1rem;
    }
    .photo-card-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    ul {
      font-size: 1.25rem;
      padding-top: 1rem;
      list-style-type: "â˜…";
      margin-bottom: 1rem;
    }
    li {
      padding: 0.5rem 0 0 1rem;
    }
    li::marker {
      color: var(--aces-blue-dark);
    }
    li::marker:hover {
      rotate: 60deg;
    }

    @media (max-width: 64em) {
      .signup-photo-card-container {
        margin: 0 0 2rem;
        flex: 0 0 40%;
      }
      ul {
        padding-bottom: 1rem;
      }
    }

    @media (max-width: 35em) {
      .motivated-text {
        padding: 1.5rem;
        font-size: 1.2rem;
      }
      .signup-photo-text-container {
        flex-direction: column;
        height: auto;
      }
      .signup-photo-card-container {
        margin: 1rem 0 2rem;
      }
      ul {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 64em) {
      .signup-photo-text-container {
        margin: 0 5% 3rem;
        flex-direction: column;
        height: 55rem;
      }
    }
  </style>


</html>
