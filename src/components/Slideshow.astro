---
import { Image } from "astro:assets";

import volcano from "../images/volcano1600.jpg";
import boxes from "../images/boxes.jpg";
import fancy from "../images/fancy1600.jpg";
import blackShirts from "../images/blackShirts1800.jpg";
---

<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      .hidden-slide {
        opacity: 0.2;
        width: 100%;
        height: 100%;
        /* height: 85vh; */
      }
      img {
        vertical-align: middle;
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
      .slideshow-container {
        height: 91vh;
        height: 91svh;
        /* box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); */
      }
      .dots-container {
        text-align: center;
        transform: translateY(-2rem);
        /* padding-top: 1rem; */
        background-color: transparent;
      }
      /* The dots/bullets/indicators */
      .dot {
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
      }

      .active {
        background-color: #717171;
      }
      .fade {
        animation-name: fade;
        animation-duration: 11s;
      }
      @keyframes fade {
        0% {
          opacity: 0.4;
        }
        10% {
          opacity: 1;
        }
        85% {
          opacity: 1;
        }
        100% {
          opacity: 0.4;
        }
      }

      @media (max-width: 86em) {
        .slideshow-container {
          width: 100%;
          height: 89vh;
          height: 89svh;
          /* display: none; */
        }
      }

      @media (max-width: 64em) {
        .slideshow-container {
          width: 100%;
          height: 50vh;
          height: 50svh;
        }
      }

      @media (max-width: 35em) {
        .slideshow-container {
          width: 100vw;
          height: 30vh;
          height: 30svh;
        }
        .dot {
          width: 7.5px;
          height: 7.5px;
        }
        /* img {
          object-fit: contain;
          width: 100%;
          height: 100%;
        } */
      }
    </style>
  </head>
  <body>
    <div class="slideshow-container">
      <div class="hidden-slide fade">
        <Image
          src={volcano}
          alt="elementary schoolers excited about a foaming, fake volcano"
        />
      </div>

      <div class="hidden-slide fade">
        <Image
          style="object-position: 50% 28%;"
          src={boxes}
          alt="ACES staff moving boxes"
        />
      </div>

      <div class="hidden-slide fade">
        <Image src={fancy} alt="Aces students dressed up for a formal event" />
      </div>

      <div class="hidden-slide fade">
        <Image
          src={blackShirts}
          alt="big group photo of ACES students and staff"
        />
      </div>

      <div class="dots-container">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>
    </div>

    <script>
      let slideIndex = 0;
      showSlides();

      function showSlides() {
        let slides = document.getElementsByClassName("hidden-slide");
        let dots = document.getElementsByClassName("dot");
        for (let i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        slideIndex++;
        if (slideIndex > slides.length) {
          slideIndex = 1;
        }
        for (let i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
        setTimeout(showSlides, 8000);
      }
    </script>
  </body>
</html>
