---
import { Image } from "astro:assets";

import Topbar from "../components/Topbar.jsx";
import acesLogo from "../images/ACES-logo-transparent-no-words.png";
---

<!doctype html>
<Topbar client:load>
  <Image
    src={acesLogo}
    alt="ACES logo (the word aces spelled out with a star as the letter A)"
    class="navbar-logo"
    slot="logo"
  />
</Topbar>
<style is:global>
  .navbar {
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    z-index: 2;
  }
  .navbar-toggler:focus {
    box-shadow: none;
  }
  .navbar-collapse {
    flex-grow: 0;
  }
  .navbar-logo {
    width: 10rem;
    height: auto;
  }

  .me-auto {
    margin-right: 0 !important;
  }
  .me-auto > * {
    margin-right: 0;
    margin-left: auto !important;
  }
  .navbar-nav,
  .navbar-nav > * {
    font-size: 1.2rem;
    font-weight: 500;
    /* text-align: right; */
  }
  .navbar-nav > * {
    margin: 0 0.5rem;
  }
  .navbar-nav .nav-link.active,
  .navbar-nav .show > .nav-link {
    text-align: right;
  }
  .dropdown-menu {
    text-align: inherit;
    min-width: max-content;
  }
  .dropdown-item {
    text-align: center;
  }
  .signup-button {
    background-color: #fff;
    color: var(--aces-blue-black);
    border-radius: 10px;
  }
  @media (max-width: 35em) {
    /* .signup-button {
      padding: 0.5rem;
    } */
  }
</style>
