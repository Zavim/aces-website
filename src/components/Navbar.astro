---
import Topbar from "../components/Topbar.jsx";
---

<!DOCTYPE html>
<Topbar client:load />
<style is:global>
  .navbar {
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    z-index: 2;
  }
  .navbar-toggler:focus {
    box-shadow: none;
  }
  .navbar-collapse {
    flex-grow: 0;
  }
  .me-auto {
    margin-right: 0 !important;
  }
  .me-auto > * {
    margin-right: 0;
    margin-left: auto !important;
  }
  .navbar-nav,
  .navbar-nav > * {
    font-size: 1.2rem;
    text-align: right;
  }
  .navbar-nav > * {
    margin: 0 1rem;
  }
  .dropdown-menu {
    text-align: inherit;
    min-width: max-content;
  }
  .dropdown-item {
    text-align: center;
  }
  @media (max-width: 35em) {
  }
</style>
